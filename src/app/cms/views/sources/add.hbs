<h2><legend>Create a new Project</legend></h2>

<div class="col-md-6 col-md-offset-3">
    <form method="post" enctype="multipart/form-data">
        <label for="name" class="sr-only">Name</label>
        <input type="text" name="name" class="form-control" placeholder="Collection name" required autofocus>
        <label for="name" class="sr-only">Postman file</label>
        <input type="file" name="sourceFile" class="form-control" required>
        <label for="url" class="sr-only">URL</label>
        <input type="text" name="url" class="form-control" placeholder="http://yourHost.com" required>
        <button class="btn btn-primary btn-block" type="submit">Create</button>
    </form>
</div>